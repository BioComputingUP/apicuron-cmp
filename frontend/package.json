{
  "name": "consent-widget",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:lib:ng": "npx ng build apicuron-consent",
    "build:lib:tailwind": "npx tailwindcss -c tailwind-library.config.js -i projects/apicuron-consent/src/styles.css -o dist/apicuron-consent/styles.css --minify",
    "build:lib": "npm run build:lib:ng && npm run build:lib:tailwind",
    "watch:lib:ng": "npx ng build apicuron-consent --watch",
    "watch:lib:tailwind": "npx tailwindcss -c tailwind-library.config.js -i projects/apicuron-consent/src/styles.css -o dist/apicuron-consent/styles.css --watch",
    "watch:lib": "npx concurrently 'npm run watch:lib:tailwind' 'npm run watch:lib:ng'",
    "watch:app": "npx concurrently 'npm run watch' 'npm run watch:lib:ng' 'npm run watch:lib:tailwind'",
    "serve:ssr:consent-widget": "node dist/consent-widget/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/elements": "^18.2.14",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.21",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular/cli": "^18.2.21",
    "@angular/compiler-cli": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.5.2"
  }
}
